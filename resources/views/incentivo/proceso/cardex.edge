    <script>
        function guardarCliente()
        {
            var obj = {};

            var identificador = $("#rutCliente").val();
            var nombre = $("#nombreCliente").val();

            var apellido = $("#apellidoCliente").val();
            var email = $("#emailCliente").val();
            var telefono = $("#telefonoCliente").val();

            obj = {identificador: identificador, nombre: nombre, apellido: apellido, email: email, telefono: telefono};

            $.ajax({
                        url: '/Incentivo/Proceso/addCliente',
                        type: "GET",
                        data: obj,
                        dataType: "json",
                        success: function (data) {
                            //swal("Venta Finalizada", "Tu venta se ha guardado correctamente", "success");

                            swal({
                                title: 'CÃ¡rdex',
                                text: "Los datos del cliente han sido registrados correctamente.",
                                type: 'success',
                                showCancelButton: false,
                                confirmButtonColor: '#3085d6',
                                confirmButtonText: 'Aceptar'
                                }).then((result) => {
                                location.href = "/Incentivo/Proceso/cardex";
                            });

                            //location.reload();
                        },
                        error: function(e){
                            console.log(e);
                        }
            });
        }
        

    </script>


