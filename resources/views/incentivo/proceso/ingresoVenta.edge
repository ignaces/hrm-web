      <script type="text/javascript" src="/assets/js/instascan.min.js"></script>
    <script>
            var submarca = "";
            var envase = "";
            var idproducto = 0;
            
            $("#buscar_producto").click(function(){
                //console.log($("#codigo_producto").val());
                $.ajax({
                            url: '/Incentivo/Proceso/getProducto',
                            type: "GET",
                            data: {idProducto:  $("#codigo_producto").val()},
                            dataType: "json",
                            success: function (data) {
                                if(data.length == 0)
                                {
                                    $("#datos_producto").hide();
                                    swal("Advertencia", "Producto no existe", "error");

                                    submarca = "";
                                    envase = "";
                                    idproducto = 0;
                                }
                                else
                                {
                                    $("#datos_producto").show();
                                    $("#caja_productos").show();
                                    $("#marca_producto").html(data[0].marca);
                                    $("#submarca_producto").html(data[0].submarca);
                                    $("#descripcion_producto").html(data[0].descripcion);
                                    $("#envase_producto").html(data[0].envase);
                                    $("#id_producto").val(data[0].idproducto);

                                    var submarca = data[0].submarca;
                                    var envase = data[0].envase;
                                    var idproducto = data[0].idproducto;

                                    $("#valor_submarca").val(submarca);
                                    $("#valor_envase").val(envase);
                                    $("#valor_idproducto").val(idproducto);
                                    
                                }
                            }
                });
            });

            $("#agregar_producto").click(function(){
                $("#fila_inicial").hide();

                var cont = "";
                var n_invoice = 1;

                $(".productos_ingresados").each(function(){
                    n_invoice++;
                });
                

                cont = "<tr class='productos_ingresados'>";
                cont = cont + "<td>"+n_invoice+"</td>";
                cont = cont + "<td>"+$("#valor_submarca").val()+" "+$("#valor_envase").val()+"</td>";
                cont = cont + "<td>"+$("#valor_cantidad").val()+"</td>";
                cont = cont + "<td>"+$("#valor_precio").val()+"</td>";

                cont = cont + "</tr>";

                //console.log(cont);

                $("#tabla_invoice").append(cont);
                $("#valor_submarca").val("");
                $("#valor_envase").val("");
                $("#valor_idproducto").val("");
                $("#valor_cantidad").val("");
                $("#valor_precio").val("");
                $("#codigo_producto").val("");
                $("#datos_producto").hide();
            });

      var startScanner = function(){
            let scanner = new Instascan.Scanner({ video: document.getElementById('scanner-container') });
                scanner.addListener('scan', function (content) {
                     $("#modal-camara").modal("hide");
                        $("#codigo_producto").val(content);
                        $("#buscar_producto").trigger("click");
                });
                Instascan.Camera.getCameras().then(function (cameras) {
                    if (cameras.length > 0) {
                        if(cameras.length>1){
                                scanner.start(cameras[1]);  
                        }else{
                            scanner.start(cameras[0]);  
                        }
                        
                    } else {
                    console.error('No cameras found.');
                    }
                }).catch(function (e) {
                    console.error(e);
                });
      }
      
    

            $("#btn_camara").click(function(){
              
                    startScanner();
                    $("#modal-camara").modal("show");
              
              
            });
            
                
    </script>
